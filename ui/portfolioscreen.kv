#:kivy 2.1
<PortfolioScreen>:

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: root.name
            left_action_items: [["menu"]]
            right_action_items: [["plus", lambda x: app.call_method('TransactionDialog', 'open', name=root.name)], ["dots-vertical"]]
            anchor_title: "center"

        MDBoxLayout:
            size_hint_y: .05

            MDLabel:
                text: str(root.value) + " " + root.currency
                halign: "center"

        MDBoxLayout:
            size_hint_y: .5
            md_bg_color: 1, 1, 0, 1
            id: graph
            
            Image:
                id: img
                source: './files/images/' + root.name + '_graph.png'

        MDBoxLayout:
            size_hint_y: .45

            ScrollView:
                size_hint: 1, 1

                MDGridLayout:
                    cols: 1
                    size_hint_y: None
                    id: p_list
                    row_default_height: self.parent.parent.height/4
                    row_force_default: True
                    height: self.minimum_height
                    spacing: 10, 10
                    padding: 0, 10, 0, 0
    
        MDFlatButton:
            text: 'back to main screen'
            on_release: app.sm.change_screen('main')

        MDFlatButton:
            text: 'add a new transaction'
            on_release: app.call_method('TransactionDialog', 'open', name=root.name)


<NewTransaction>:
    date: date
    currency: currency
    type: type
    amount: amount
    size_hint_y: None
    height: self.ids.date.height * 4
    cols: 1

    MDTextField:
        id: date
        hint_text: "Date of Transaction"
        helper_text_mode: "persistent"
        helper_text: ""
        text: '2022-02-22'

    MDTextField:
        id: currency
        hint_text: "Currency"
        text: 'EUR'

    MDTextField:
        id: type
        hint_text: "Sell or Cash-In / Buy or Withdraw"
        text: 'Cash-In'

    MDTextField:
        id: amount
        hint_text: 'Amount'
        text: '500'
