#:kivy 2.1

MDBoxLayout:
    orientation: "vertical"

    MDToolbar:
        title: "Portfolios"
        left_action_items: [["menu"]]
        right_action_items: [["plus", lambda x: app.call_method('MyDialog', 'open')], ["dots-vertical"]]
        anchor_title: "center"

    MDLabel:
        text: "Content"
        halign: "center"

<AddPortfolio>
    name: name
    orientation: "vertical"
    size_hint_y: None

    MDTextField:
        id: name
        hint_text: "Portfolio Name"
        helper_text_mode: "persistent"
        helper_text: ""

